{
  "name": "syncscribe",
  "version": "1.0.0",
  "description": "Advanced Meeting Transcriber Desktop App",
  "main": "app/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run client:build",
    "client:start": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:dev": "cd client && BROWSER=none npm start",
    "server:start": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "pack": "electron-builder --publish=never",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "postinstall": "cd client && npm install && cd ../server && npm install"
  },
  "keywords": [
    "meeting",
    "transcription",
    "ai",
    "electron",
    "desktop"
  ],
  "author": "SyncScribe Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-serve": "^1.3.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.syncscribe.app",
    "productName": "SyncScribe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "client/build/**/*",
      "server/**/*",
      "node_modules/**/*",
      "!server/node_modules/**/*",
      "!client/node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "app/assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "app/entitlements.mac.plist",
      "entitlementsInherit": "app/entitlements.mac.plist"
    },
    "win": {
      "icon": "app/assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "app/assets/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
