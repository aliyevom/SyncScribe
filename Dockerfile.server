# Server container (Node.js)
# Node 20 required: react-router-dom@7+ requires node>=20
FROM node:20-alpine

ENV NODE_ENV=production
WORKDIR /app/server

# Install only server deps
COPY server/package*.json ./
RUN npm ci --omit=dev

# Copy server source
COPY server/ ./

EXPOSE 5002
CMD ["node", "index.js"]